<Window x:Class="SandboxWindowsDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:SandboxWindowsDesktopApp.Razor.Pages" 
        xmlns:b="http://schemas.microsoft.com/winfx/2006/xaml/presentation/blazor"
        xmlns:vm="clr-namespace:SandboxWindowsDesktopApp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock Text="WPF" HorizontalAlignment="Center" />
            <Button Content="Play sound" Command="{Binding BeepCommand}" />
            <Button Content="Inactive" Command="{Binding InactiveCommand}" />
            <Button Content="Start" Command="{Binding StartCounterCommand}" />
            <TextBlock Text="{Binding SomeText}" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBlock Text="BlazorWebView" HorizontalAlignment="Center" />
            <b:BlazorWebView Name="WebViewComponent" Height="400" HostPage="wwwroot/index.html" Services="{DynamicResource services}">
                <b:BlazorWebView.RootComponents>
                    <b:RootComponent Selector="#app" ComponentType="{x:Type pages:Home}" />
                </b:BlazorWebView.RootComponents>
            </b:BlazorWebView>
        </StackPanel>
    </Grid>

</Window>
