<Window x:Class="SandboxWindowsDesktopApp.WindowA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:SandboxWindowsDesktopApp.Razor.Pages"
        xmlns:b="http://schemas.microsoft.com/winfx/2006/xaml/presentation/blazor"
        xmlns:vm="clr-namespace:SandboxWindowsDesktopApp.ViewModels"
        mc:Ignorable="d"
        Title="WindowA"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <StackPanel Orientation="Vertical">
        <TextBlock Text="BlazorWebView" TextAlignment="Center" Background="Black" Foreground="White" Padding="10" />
        <b:BlazorWebView Name="WebViewComponent" Width="400" Height="400" HostPage="wwwroot/index.html" Services="{DynamicResource services}">
            <b:BlazorWebView.RootComponents>
                <b:RootComponent Selector="#app" ComponentType="{x:Type pages:Home}" />
            </b:BlazorWebView.RootComponents>
        </b:BlazorWebView>
    </StackPanel>
</Window>
